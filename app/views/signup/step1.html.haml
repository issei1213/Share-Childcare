.container
  .row.justify-content-center
    .col-5
      %img.d-block.mx-auto.mt-5{alt: "", height: "70px", width: "263px", src: "../images/logo_white.png"}/
    %div{role: "content"}
      .widget-body.mt-5
        .row
          %form#wizard-1{novalidate: "novalidate"}
            #bootstrap-wizard-1.col-sm-12
              .form-bootstrapWizard
                %ul.bootstrapWizard.form-wizard
                  %li.active{data: {target: "#step1"}}
                    %a{data: {toggle: "tab"}, href: "#tab1"}
                      %span.step 1
                      %span.title 会員情報 入力
                  %li{data: {target: "#step2"}}
                    %a{data: {toggle: "tab"}, href: "#tab2"}
                      %span.step 2
                      %span.title 基本情報 入力
                  %li{data: {target: "#step3"}}
                    %a{data: {toggle: "tab"}, href: "#tab3"}
                      %span.step 3
                      %span.title 完了
                .clearfix
              .tab-content
                #tab1.tab-pane
                  %br/
                  %h3
                    %strong Step 1
                    \- Basic Information
                #tab2.tab-pane
                  %br/
                  %h3
                    %strong Step 2
                    \- Billing Information
                #tab3.tab-pane
                  %br/
                  %h3
                    %strong Step 3
                    \- Domain Setup
.container.signup-step.bg-light.mt-5
  .row.justify-content-center
    .col-md-4.pt-4.text-center.font-weight-bold 
      %h5= "新規会員情報入力"
      %hr.mb-4/
  .row.justify-content-center
    .col-md-10.order-md-1
      = form_with url: step2_signup_index_path, class: "needs-validation", validation: "", local: true do |f|
        .row
          .col-md-6.mb-3
            = f.label "姓"
            = f.text_field :first_name, class: "form-control", placeholder: "田中"
            .invalid-feedback
              名字を入力してください
          .col-md-6.mb-3
            = f.label "名"
            = f.text_field :last_name, class: "form-control", placeholder: "太郎"
            .invalid-feedback
              名前を入力してください
          .col-md-6.mb-3
            = f.label "姓(かな)"
            = f.text_field :first_name_kana, class: "form-control", placeholder: "たなか"
            .invalid-feedback
              名字(かな)を入力してください
          .col-md-6.mb-3
            = f.label "名(かな)"
            = f.text_field :last_name_kana, class: "form-control", placeholder: "たろう"
            .invalid-feedback
              名前(かな)を入力してください
        .mb-3
          = f.label "ニックネーム"
          = f.text_field :nickname, class: "form-control", placeholder: "Taroh"
          .invalid-feedback
            名前を入力してください
        .mb-3
          = f.label "Eメール"
          = f.email_field :email, class: "form-control", placeholder: "tanaka_tarou@example.com"
          .invalid-feedback
            配送の更新に有効なメールアドレスを入力してください
        .mb-3
          = f.label "パスワード"
          = f.password_field :password, class: "form-control", placeholder: "7文字以上半角"
        .mb-3
          = f.label "パスワード(確認用)"
          = f.password_field :password_confirmation, class: "form-control", placeholder: "7文字以上半角(再度入力)"

        %hr.mb-4/
        %button.btn.btn-primary.btn-lg{:type => "submit"} 次へ進む
  %footer.my-5.pt-5.text-muted.text-center.text-small